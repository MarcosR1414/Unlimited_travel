                android:text="1 habitacion -  2 adultos" />


            <ImageView
                android:id="@+id/hotel_imagen5"
                android:layout_width="match_parent"
                android:layout_height="80pt"
                android:layout_marginTop="38dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hotel5" />
            <TextView
                android:id="@+id/hotel5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Grand Hotel Huánuco"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ubicacion5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jr. Dámaso Beraún 775, Huánuco" />
            <TextView
                android:id="@+id/num5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="1 habitacion -  2 adultos" />



            <ImageView
                android:id="@+id/hotel_imagen6"
                android:layout_width="match_parent"
                android:layout_height="80pt"
                android:layout_marginTop="38dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hotel6" />
            <TextView
                android:id="@+id/hotel6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Shushupe Hotel"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ubicacion6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Av. Alameda Perú 362, Tingo María" />
            <TextView
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="1 habitacion -  2 adultos" />




        </LinearLayout>
